{
  "manifestVersion": 1,
  "id": "azure-cosmos-db-management",
  "name": "Azure CosmosDB Management Tools for Azure DevOps",
  "version": "0.0.<BUILDNUMBER>",
  "publisher": "cwlabsconsultingservices",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "As long as it is not possible to create by ARM Template Cosmos DB Tables or Collection this will be helpfull.",
  "categories": [
    "Azure Pipelines"
  ],
  "icons": {
    "default": "images/CosmosDB_ExtensionPicture.png"
  },
  "files": [
    {
      "path": "CreateDatabaseTask"
    },
    {
      "path": "DeleteDatabaseTask"
    },
    {
      "path": "CreateCollectionTask"
    },
    {
      "path": "DeleteCollectionTask"
    },    
    {
      "path": "GetDatabaseAccountAuthorizationTask"
    }
  ],

  "content": {
    "details": {
      "path": "overview.md"
    }
  },

  "contributions": [
    {
      "id": "azure-cosmos-db-management_CreateDatabase",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "CreateDatabaseTask"
      }
    },
    {
      "id": "azure-cosmos-db-management_DeleteDatabase",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "DeleteDatabaseTask"
      }
    },
    {
      "id": "azure-cosmos-db-management_CreateCollection",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "CreateCollectionTask"
      }
    },
    {
      "id": "azure-cosmos-db-management_DeleteCollection",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "DeleteCollectionTask"
      },
      {
        "id": "azure-cosmos-db-management_GetAuthorization",
        "type": "ms.vss-distributed-task.task",
        "targets": [
          "ms.vss-distributed-task.tasks"
        ],
        "properties": {
          "name": "GetDatabaseAccountAuthorizationTask"
        }
    }
  ]
}